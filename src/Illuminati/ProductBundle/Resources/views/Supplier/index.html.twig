{% extends ":default:index.html.twig" %}

{% block content -%}
    <h2 class="page-header">Supplier list</h2>

    <table class="records_list">
        <thead>
            <tr>
                <th>Name</th>
                <th>Deleted</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('supplier_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                <td>{{ entity.deleted }}</td>
                <td>{{ entity.id }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('supplier_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('supplier_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('supplier_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
