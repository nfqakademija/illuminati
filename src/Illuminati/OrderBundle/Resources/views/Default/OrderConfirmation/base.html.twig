{% extends ":default:index.html.twig" %}

{% block body %}
    {% set sum = 0 %}
    <div class="container">
        <h1>{{ "order.summary.confirmation.title"|trans }}</h1>
        <a href="{{ path('host_order_summary',{'id':orderId}) }}" class="btn btn-default"><span class="glyphicon glyphicon-chevron-left"></span>{{ "order.summary.confirmation.returnToSummary"|trans }}</a>
        <hr>



        {% if products %}

           {% include 'IlluminatiOrderBundle:Default/OrderConfirmation:productsTable.html.twig' with products %}

            <hr>

            <div class="btn-group pull-right" role="group">
                <button class="btn btn-default"><span class="glyphicon glyphicon-save-file"></span>  {{ "order.summary.confirmation.genPDF"|trans }}</button>
                <button class="btn btn-success"><span class="glyphicon glyphicon-ok"></span> {{ "order.summary.confirmation.confirm"|trans }}</button>
            </div>
        {% else %}
            <div class="text-center">
                <h2 class="text-center">{{ "order.summary.confirmation.noOrders"|trans }}</h2>
                <h1><span class="glyphicon glyphicon-thumbs-down"></span></h1>
            </div>
        {% endif %}
    </div>
{% endblock %}