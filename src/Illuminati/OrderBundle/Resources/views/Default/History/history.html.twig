{% extends ":default:index.html.twig" %}

{% block body %}
    {% if orders %}
        {% if type == 'hosted' %}
            <h1>Orders you have hosted</h1>
        {% elseif type == 'joined' %}
            <h1>Orders you have joined</h1>
        {% endif %}
        {% for i in 0..orders|length-1 %}
        <div style="border: 4px solid black; width:50%;margin:0 auto;margin-bottom: 3%">
            <div>
                <h3 style="display:inline-block">{{ orders[i]['title'] }}</h3>
                <h3 style="display:inline-block;float: right">Status:{{ orders[i]['state'] }}</h3>
            </div>
            <div>
                <h3 style="display:inline-block">Closes:{{ orders[i]['close_date'] }}</h3>
                <h3 style="display:inline-block;float: right">Participants:{{ orders[i]['pCnt'] }}</h3>
            </div>
            <div style="float: right">
                <button class="btn btn-success btn">View</button>
            </div>
        </div>
        {% endfor %}
    {% elseif type == 'hosted' %}
        <h1>You havent hosted any orders.</h1>
    {% else %}
        <h1>You havent joined any orders</h1>
    {% endif %}



{% endblock %}