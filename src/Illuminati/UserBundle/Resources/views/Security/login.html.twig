{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}

{% if error %}
    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="row">
    <div class="col-sm-4 col-sm-offset-4">
        <h2 class="text-center page-header">Welcome back!</h2>
        <form class="form-horizontal" action="{{ path("fos_user_security_check") }}" method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

            <div class="form-group">
                <label class="control-label col-sm-3" for="username">{{ 'security.login.email'|trans }}</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="Enter email"/>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-3" for="password">{{ 'security.login.password'|trans }}</label>
                <div class="col-sm-8">
                    <input type="password" class="form-control" id="password" name="_password" required="required" placeholder="Enter password"/>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-10">
                    <div class="checkbox">
                        <label for="remember_me"><input type="checkbox" id="remember_me" name="_remember_me" value="on" />{{ 'security.login.remember_me'|trans }}</label>
                    </div>
                </div>
            </div>

            <div class="form-group">
                    <input type="submit" id="_submit" class="btn btn-primary col-sm-4 col-sm-offset-4" name="_submit" value="{{ 'security.login.submit'|trans }}" />
            </div>

        </form>
    </div>
</div>
   <div class="text-center">
       <a href="{{ path('fos_user_registration_register') }}">Don't have an account?</a><br>
       <a href="{{ path('fos_user_resetting_request') }}">Forgot password?</a>
   </div>
{% endblock fos_user_content %}
