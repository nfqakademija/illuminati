{% trans_default_domain 'FOSUserBundle' %}
<div class="col-sm-4 col-sm-offset-4">
    <h2 class="text-center page-header">{{ "resseting.pageheader"|trans({},"messages") }}</h2>
    <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request form-horizontal">
        <div>
            {% if invalid_username is defined %}
                <p class="alert alert-danger">{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}</p>
            {% endif %}

            <div class="form-group">
                <label class="control-label col-sm-2"for="username">{{ 'form.email'|trans }}</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="username" name="username" required="required" placeholder="Enter email"/>
                </div>
            </div>

        </div>

        <div class="form-group">
            <div class="col-sm-offset-4">
                <input type="submit" class="btn btn-primary" value="{{ 'resetting.request.submit'|trans }}"/>
            </div>
        </div>
    </form>
</div>
