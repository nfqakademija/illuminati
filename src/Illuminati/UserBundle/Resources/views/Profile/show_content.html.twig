{% trans_default_domain 'FOSUserBundle' %}

<div class="fos_user_user_show">
    <div class="container">
        <div class="row">
           <div class="col-sm-4 text-center">
               <img class="img img-circle" src="https://placehold.it/200x200" alt="">
           </div>

            <div class="col-sm-6">
                <div class="text-center">
                    <h2>{{ user.name }} {{ user.surname }}</h2>
                    <h2>{{ 'profile.show.email'|trans }}: {{ user.email }}</h2>
                </div>
                <table class="table table-condensed">
                    <tr>
                        <td>Hosted Orders:</td>
                        <td>{{ hostedOrdersCount }}</td>
                        <td><a href="{{ path('order_history',{type:'hosted'}) }}">Full list</a></td>
                    </tr>
                    <tr>
                        <td>Joined Orders:</td>
                        <td>{{ joinedOrdersCount }}</td>
                        <td><a href="{{ path('order_history',{type:'joined'}) }}">Full list</a></td>
                    </tr>
                </table>

                <div class="text-center">
                    <a href="{{ path('fos_user_profile_edit') }}">Change Email</a> <br>
                    <a href="{{ path('fos_user_change_password') }}">Change Password</a>
                </div>


            </div>

        </div>
    </div>
</div>
