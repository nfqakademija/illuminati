{% trans_default_domain 'FOSUserBundle' %}

<div class="fos_user_user_show">
    <div class="container">
        <div class="row">
           <div class="col-sm-4 text-center">
               <img class="img img-circle" src="{{ gravatar(user.email) }}" alt="">
           </div>

            <div class="col-sm-6">
                <div class="text-center">
                    <h2>{{ user.name }} {{ user.surname }}</h2>
                    <h2>{{ 'profile.show.email'|trans }}: {{ user.email }}</h2>
                </div>
                <table class="table table-condensed">
                    <tr>
                        <td>{{ "profile.hostedOrders"|trans({},"messages") }}</td>
                        <td>{{ hostedOrdersCount }}</td>
                        <td><a href="{{ path('order_history',{type:'hosted'}) }}">{{ "profile.fullList"|trans({},"messages") }}</a></td>
                    </tr>
                    <tr>
                        <td>{{ "profile.joinedOrders"|trans({},"messages") }}</td>
                        <td>{{ joinedOrdersCount }}</td>
                        <td><a href="{{ path('order_history',{type:'joined'}) }}">{{ "profile.fullList"|trans({},"messages") }}</a></td>
                    </tr>
                </table>

                <div class="text-center">
                    <a href="{{ path('fos_user_profile_edit') }}">{{ "profile.change.email"|trans({},"messages") }}</a> <br>
                    <a href="{{ path('fos_user_change_password') }}">{{ "profile.change.pass"|trans({},"messages") }}</a>
                </div>


            </div>

        </div>
    </div>
</div>
