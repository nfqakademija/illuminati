{% trans_default_domain 'FOSUserBundle' %}
<div class="container">
    <a href="{{ path('fos_user_profile_show') }}"><span class="glyphicon glyphicon-chevron-left"></span> {{ "profile.return"|trans({},"messages") }}</a>
</div>
<div class="col-sm-6 col-sm-offset-3">
    <h2 class="page-header text-center">{{ 'profile.edit.title'|trans }}</h2>
      {{ form_start(form,{'attr':{'class':'form-horizontal'}}) }}

        <div class="form-group">
            <label class="control-label col-sm-4" for="{{ form.email.vars.id }}">{{ form.email.vars.label|trans }}</label>
            <div class="col-sm-6">
                {{ form_widget(form.email,{'attr':{'class':'form-control'}}) }}
                {% if form_errors(form.email) is not empty %}
                    <div class="has-error">
                        <span class="help-block">{{ form_errors(form.email) }}</span>
                    </div>
                {% endif %}
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-4" for="{{ form.current_password.vars.id }}">{{ form.current_password.vars.label|trans }}</label>
            <div class="col-sm-6">
                {{ form_widget(form.current_password,{'attr':{'class':'form-control'}}) }}
                {% if form_errors(form.current_password) is not empty %}
                    <div class="has-error">
                        <span class="help-block">{{ form_errors(form.current_password) }}</span>
                    </div>
                {% endif %}
            </div>
        </div>

        {{ form_widget(form._token) }}

        <div class="form-group">
            <div class="col-sm-offset-5 col-sm-10">
                <input class="btn btn-primary" type="submit" value="{{ 'profile.edit.submit'|trans }}" />
            </div>
        </div>

      {{ form_end(form) }}


    <div class="text-center">
        <a href="{{ path('fos_user_change_password') }}">{{ "profile.change.pass"|trans({},"messages") }}</a>
    </div>
</div>