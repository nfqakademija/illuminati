{% trans_default_domain 'FOSUserBundle' %}

{#<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">#}
<div class="col-sm-4 col-sm-offset-4">
    <h2 class="text-center page-header">New User Creation</h2>
    {{ form_start(form,{'attr':{'class':'form-horizontal'}}) }}
        {{ form_errors(form) }}

        <div class="form-group">
            <label class="control-label col-sm-3" for="{{ form.name.vars.id }}">{{ form.name.vars.label|trans({},'messages') }}</label>
            <div class="col-sm-8">
                {{ form_widget(form.name,{'attr':{'class':'form-control'}}) }}
                {% if form_errors(form.name) is not empty %}
                    <div class="has-error">
                        <span class="help-block">{{ form_errors(form.name) }}</span>
                    </div>
                {% endif %}
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-3" for="{{ form.surname.vars.id }}">{{ form.surname.vars.label|trans({},'messages') }}</label>
            <div class="col-sm-8">
                {{ form_widget(form.surname,{'attr':{'class':'form-control'}}) }}
                {% if form_errors(form.surname) is not empty %}
                    <div class="has-error">
                        <span class="help-block">{{ form_errors(form.surname) }}</span>
                    </div>
                {% endif %}
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-3" for="{{ form.email.vars.id }}">{{ form.email.vars.label|trans }}</label>
            <div class="col-sm-8">
                {{ form_widget(form.email,{'attr':{'class':'form-control'}}) }}
                {% if form_errors(form.email) is not empty %}
                    <div class="has-error">
                        <span class="help-block">{{ form_errors(form.email) }}</span>
                    </div>
                {% endif %}
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-3" for="{{ form.plainPassword.vars.id }}">{{ form.plainPassword.vars.label|trans }}</label>
            <div class="col-sm-8">
                <div class="input-group">
                    {{ form_widget(form.plainPassword,{'attr':{'class':'form-control togglable-pass'}}) }}
                    <div class="input-group-addon btn toggle-pass"><span class="glyphicon glyphicon-eye-open"></span> {{ "profile.show"|trans({},"messages") }}</div>
                </div>
                {% if form_errors(form.plainPassword) is not empty %}
                    <div class="has-error">
                        <span class="help-block">{{ form_errors(form.plainPassword) }}</span>
                    </div>
                {% endif %}
            </div>
        </div>

        {{ form_widget(form._token) }}

        <div class="form-group">
            <div class="col-sm-offset-4">
                <input type="submit" class="btn btn-primary" value="{{ 'form.registration.submit'|trans({},'messages') }}" />
            </div>
        </div>

        {{ form_end(form) }}

    <div class="text-center">
        <a href="{{ path('fos_user_security_login') }}">Already have an account?</a>
    </div>
</div>


