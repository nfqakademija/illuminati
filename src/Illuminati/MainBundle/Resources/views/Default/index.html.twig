{% extends ":default:index.html.twig" %}
{% trans_default_domain 'messages' %}
{% block body %}
<div id="wrapper">

    <header class="main-header">
        <div class="container">
            <div class="row text-center">
                <div class="col-md-5 hidden-sm hidden-xs">
                    {% image '@IlluminatiMainBundle/Resources/public/images/logo-min.png' %}
                    <img class="img img-responsive center-block" src="{{ asset_url }}" alt="">
                    {% endimage %}
                </div>
                <div class="col-md-7 parent">
                    <div class="child">
                        <h1>{{ "headerTitle"|trans }}</h1>
                        <p>{{ "headerSubTitle"|trans }}</p>
                        <a class="btn btn-primary" href="/order/new">{{ "headerButton"|trans }}</a>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="container">
        <div id="welcome">
            <h2 class="page-header text-center">
                {{ "whyUseTheSystem"|trans }}
            </h2>
            <div class="row">
                <div class="container col-sm-4 pull-right">
                    <p>{{ "reasonOne"|trans }}</p>
                </div>
            </div>
            </div>
            <div class="row">
                <div class="container col-sm-4 pull-left">
                    <p>{{ "reasonTwo"|trans }}</p>
                </div>
            </div>
            <div class="row">
                <div class="container col-sm-4 pull-right">
                    <p>{{ "reasonThree"|trans }}</p>
                </div>
            </div>
            <div class="row">
                <div class="container col-sm-4 pull-left">
                    <p>{{ "reasonFour"|trans }} <a href="/register">{{ "registerLink"|trans }}.</a> </p>
                </div>
            </div>
            </div>
        </div>

    </div>
</div>
    <br>
{% endblock %}
