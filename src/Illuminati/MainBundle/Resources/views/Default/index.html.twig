{% extends ":default:index.html.twig" %}
{% trans_default_domain 'messages' %}
{% block body %}
<div id="wrapper" class="home">

    <header class="main-header">
        <div class="container">
            <div class="row text-center">
                <div class="col-md-5 hidden-sm hidden-xs">
                    {% image '@IlluminatiMainBundle/Resources/public/images/burger.png' %}
                    <img class="img img-responsive center-block" src="{{ asset_url }}" alt="">
                    {% endimage %}
                </div>
                <div class="col-md-7 parent">
                    <div class="child">
                        <h1>{{ "headerTitle"|trans }}</h1>
                        <h2>{{ "headerSubTitle"|trans }}</h2>

                        {#
                            If the user is logged in display link to new host order creation
                            if not, redirect to registrations page with _target_parth to new order creation
                        #}
                        {% if app.user %}
                            <p><a class="btn btn-lg btn-success" href="{{ path('host_order_new') }}">{{ "headerButton"|trans }}</a></p>
                        {% else %}
                            <form action="{{ path('fos_user_registration_register') }}" method="post">
                                <input type="hidden" name="_target_path" value="{{ path('host_order_new') }}">
                                <button class="btn btn-lg btn-success" type="submit">{{ "headerButton"|trans }}</button>
                            </form>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="container">

            <h2 class="page-header text-center">
                {{ "whyUseTheSystem"|trans }}
            </h2>

            <div class="row welcome-blocks">
                <div class="col-sm-4">
                    <div class="block-icon"><span class="glyphicon glyphicon-ok-circle"></span></div>
                    <strong>{{ "reasonOneTitle"|trans }}</strong>
                    <p>{{ "reasonOne"|trans }}</p>
                </div>
                <div class="col-sm-4">
                    <div class="block-icon"><span class="glyphicon glyphicon-ok-circle"></span></div>
                    <strong>{{ "reasonTwoTitle"|trans }}</strong>
                    <p>{{ "reasonTwo"|trans }}</p>
                </div>
                <div class="col-sm-4">
                    <div class="block-icon"><span class="glyphicon glyphicon-ok-circle"></span></div>
                    <strong>{{ "reasonThreeTitle"|trans }}</strong>
                    <p>{{ "reasonThree"|trans }}</p>
                </div>
            </div>

            <p>&nbsp;</p>

            <div class="well text-center">
                <h4>{{ "reasonFour"|trans }} <a href="/register">{{ "registerLink"|trans }}.</a> </h4>
            </div>
    </div>
</div>
    <br>
{% endblock %}
